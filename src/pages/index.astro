---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import projectData from "../content/projectData.ts";
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-16 mt-5">
    <div class="text-xl py-1">Hey there!</div>
    <h1 class="text-5xl font-bold">I build internal platforms that enforce consistency, deploy safely through GitOps, and run without constant attention</h1>
    <p class="text-2xl py-3 text-gray-600">
      4+ years owning production Kubernetesâ€”40% lower costs, 75% faster incident response
    </p>
    <p class="text-lg py-2">
      I've spent 4+ years owning production Kubernetes and AWS infrastructure. I reduced infrastructure costs by 40%, cut observability spend by 35%, and improved incident response time by 75%. I build Terraform-based IaC, GitOps workflows, and the monitoring systems that keep services running.
    </p>
    <div class="mt-8">
      <a
        class="btn"
        href="https://linkedin.com/in/jared-kominsky"
        target="_blank"
        rel="noopener noreferrer"
      >
        Discuss SRE or platform roles
      </a>
      <a
        href="https://github.com/KominskyOrg"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-outline ml-5"
      >
        Check out my GitHub
      </a>
    </div>
  </div>

  <div class="mt-4">
    <h2 class="text-2xl w-full font-semibold mb-4 text-gray-700">Selected Projects</h2>
  </div>

  <div>
    {projectData.slice(0, 3).map((project, index) => (
      <div>
        <HorizontalCard
          title={project.title}
          img={project.img}
          desc={project.desc}
          url={project.url}
          badge={project.badge || null}
          role={project.role}
          outcome={project.outcome}
          isCaseStudy={project.isCaseStudy}
          target={project.target}
        />
        {index < 2 && <div class="divider my-0" />}
      </div>
    ))}
  </div>
</BaseLayout>
