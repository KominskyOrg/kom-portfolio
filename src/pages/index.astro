---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import projectData from "../content/projectData.ts";
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there!</div>
    <h1 class="text-5xl font-bold">I'm Jared Kominsky</h1>
    <h2 class="text-3xl py-3 font-bold">
      Building Reliable Infrastructure at Scale
    </h2>
    <p class="text-lg py-2">
      Senior DevOps & SRE with 4+ years owning production Kubernetes and AWS infrastructure.
      I've reduced infrastructure costs by 40%, observability spend by 35%, and incident
      response time by 75% through Terraform IaC, GitOps workflows, and strategic monitoring.
      Currently building internal developer platforms and LLM automation tools on my home
      lab Kubernetes cluster. Let's connect!
    </p>
    <div class="mt-8">
      <a
        class="btn"
        href="https://linkedin.com/in/jared-kominsky"
        target="_blank"
        rel="noopener noreferrer"
      >
        Let's connect!
      </a>
      <a
        href="https://github.com/KominskyOrg"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-outline ml-5"
      >
        Check out my GitHub
      </a>
    </div>
  </div>

  <div>
    <h3 class="text-3xl w-full font-bold mb-2">My Latest Projects {"</>"}</h3>
  </div>

  <div>
    {projectData.slice(0, 3).map((project, index) => (
      <div>
        <HorizontalCard
          title={project.title}
          img={project.img}
          desc={project.desc}
          url={project.url}
          badge={project.badge || null}
        />
        {index < 2 && <div class="divider my-0" />}
      </div>
    ))}
  </div>
</BaseLayout>
