---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import projectData from "../content/projectData.ts";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div class="mb-8">
    <div class="text-3xl w-full font-bold mb-3">Professional Projects</div>
    <p class="text-lg text-gray-600">
      Selected projects where I owned the full stackâ€”from architecture decisions to production operations.
      Each card is a summary. UnifyOps includes a detailed case study covering architecture, tradeoffs, and outcomes.
    </p>
  </div>

  <div>
    {
      projectData.map((project, index) => (
        <>
          <HorizontalCard
            title={project.title}
            img={project.img}
            desc={project.desc}
            url={project.url}
            badge={project.badge}
            role={project.role}
            outcome={project.outcome}
            isCaseStudy={project.isCaseStudy}
            target={project.target}
          />
          {index < projectData.length - 1 ? <div class="divider my-0" /> : null}
        </>
      ))
    }
  </div>
</BaseLayout>
